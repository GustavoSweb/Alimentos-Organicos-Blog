<%- include('../../../views/partials/header')%>
<body>
  <%- include('../../../views/partials/navbar')%>
  <div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
    <hr>

      
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Id</th>
          <th>Titulo</th>
          <th>Slug</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach((category)=> {%>
        <tr>
          <td><%=category.id%></td>
          <td><%=category.title%></td>
          <td><%=category.slug%></td>
          <td>
            
            <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning">Editar</a>
            
            <form action="/categories/delete" method = "POST" style="display: inline" onsubmit="del(event, this)">
              <input type="hidden" name="id" value="<%=category.id%>">
              
              <button type="submit" class="btn btn-danger" >Deletar
</button>


            </form>
           
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>

  </div>
  <script>
 function del(event, form) {
   event.preventDefault()
   
   var decisao = confirm("Voce quer deletar essa categoria?")
   
   if(decisao){
     form.submit()
   }else{
     console.log("nao quero deletar")
   }
   
 }
</script>
</body>
<%- include('../../../views/partials/footer')%>
