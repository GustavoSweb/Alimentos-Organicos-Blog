<%- include('./partials/header')%>
<link rel="stylesheet" href="/css/style.css">
<body>
 <%- include('./partials/homenavbar')%>
 <div class="container">
    <div id="jubon" class="bg-primary">
      <h1>Bem Vindo!</h1>
      <p>Um simples blog do guia do progamador </p>
    </div>
           <% articles.rows.forEach((article)=> {%>
           <br>
           <div class="card">
             <div class="card-header">
              <h2>
                <%= article.title%>
              </h2> 
             </div>
             <div class="card-body">
               <a href="/<%=article.slug%>" class="btn btn-outline-primary outline">Ler Artigo</a>
             </div>
           </div>
        <%})%>
 </div>
 <nav aria-label="Page navigation example" style="float: right" class="mt-3 me-3">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% for(let x = 1; x<=articles.count/4+1;x++){%>
    <%if(x == 1){%>
    <li class="page-item"><a class="page-link" href="#"><%=x%></a></li>
    <%}else{%>
    <li class="page-item"><a class="page-link" href="/articles/page/<%=x%>"><%=x%></a></li>
    <%}%>
    <%}%>
    <li class="page-item">
      <a class="page-link" href="/articles/page/2" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
</body>
<%- include('./partials/footer.ejs')%>
